<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuki.mapper.SysBookinfoMapper">
    <select id="getBookCount" resultType="java.lang.Integer">
        select count(*) from sys_bookinfo
    </select>
    <select id="getBookCountBySelectWord" resultType="java.lang.Integer">
        select count(*) from sys_bookinfo where name like #{selectWord} or author like #{selectWord}
    </select>
</mapper>